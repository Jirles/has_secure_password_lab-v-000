<h1>Login</h1>

<%= form_for(@user), url: {controller: 'sessions', action: 'create'} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_confirmation_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>

<p>Don't have an account? <%= link_to "Signup", signup_path %></p>
